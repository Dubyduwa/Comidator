        <tbody>
            <% if (data) { %>
              <% for (var i = 0; i < data.length; i++) { %>
                <tr>
                  <td> <%= (i + 1) %></td>
                  <td> <%= data[i].username %> </td>
                  <td> <%= data[i].nota %> </td>
                  <td>
                    <a href="/viewuserranking/<%= data[i].id %>" class="btn btn-success"> Ver perfil de <%= data[i].username %> </a>
                    <a href="/viewofferuser/<%= data[i].id %>" class="btn btn-success mt-1"> Examinar ofertas de <%= data[i].username %> </a>
                  </td>
                </tr>
                <% } %>
            <% } %>
        </tbody>
      </table>
    </div>
  </div>
